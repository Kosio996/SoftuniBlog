@model Blog.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

@Styles.Render("~/Content/SiteStyles.css")
<div class="container">
    <div class="">
        <h2>@ViewBag.Title.</h2>

        <p class="text-success">@ViewBag.StatusMessage</p>
        <div>
            <h4>Change your account settings</h4>
            <hr />
            <div>

            </div>
            <img src="@Url.Action("UserPhotos", "Home" )" height="250" width="250" class="image-style" />

            @using (Html.BeginForm("ChangePicture", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.UserPhoto, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-4">
                        <input type="file" name="UserPhoto" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />
                    </div>
                </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-4">
                    <input type="submit" class="btn btn-default" value="Change" />
                </div>
            </div>
            }
            <dl class="dl-horizontal">
                <dt>Password:</dt>
                <dd>
                    [
                    @if (Model.HasPassword)
            {
                        @Html.ActionLink("Change your password", "ChangePassword")
                    }
                    else
                    {
                        @Html.ActionLink("Create", "SetPassword")
                    }
                    ]
                </dd>

            </dl>
        </div>

    </div>

</div>
